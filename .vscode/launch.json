    "version": "0.2.0",
    "configurations": [
        {
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "probe-rs run main",
            "connectUnderReset": false,
            "cwd": "${workspaceFolder}",
            "runtimeArgs": ["dap-server"],
            "chip": "stm32g474re",
            "flashingConfig": {
                "flashingEnabled": true,
                "haltAfterReset": true
            },
            "coreConfigs": [
                {
                    "coreIndex": 0,
                    "programBinary": "target/thumbv7em-none-eabihf/debug/g474re_nucleo_ral"
                }
            ],
            "env": {
                "RUST_LOG": "info",
            },
            "consoleLogLevel": "Console",
